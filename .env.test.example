# E2E Test Environment Variables
# Copy this file to .env.test and fill in your values

# Test User Credentials
# Create a dedicated test user in your Supabase project
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=testpassword123

# Admin User (Optional)
# For testing admin-only features
ADMIN_USER_EMAIL=admin@example.com
ADMIN_USER_PASSWORD=adminpassword123

# Supabase Configuration
# Copy from .env.local or Supabase dashboard
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Base URL for E2E tests
# Default: http://localhost:3000
BASE_URL=http://localhost:3000

# Test Configuration
# Optional: Override default timeouts (in milliseconds)
E2E_TIMEOUT=30000
E2E_AUTH_TIMEOUT=10000

# Screenshot Configuration
# Optional: Control screenshot behavior
E2E_SCREENSHOTS=true
E2E_SCREENSHOT_DIR=tests/e2e/screenshots

# CI/CD Mode
# Set to true in CI environment
CI=false
