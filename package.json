{
  "name": "describe-it",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20.11.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "playwright test",
    "test:e2e:staging": "playwright test --config=playwright-staging.config.ts",
    "test:smoke": "playwright test --grep='@smoke'",
    "test:perf": "node scripts/performance-test.js",
    "test:vitals": "node scripts/web-vitals-test.js",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "analyze": "ANALYZE=true npm run build",
    "sentry:sourcemaps": "sentry-cli releases files $npm_package_version upload-sourcemaps .next/static",
    "prepare": "husky install",
    "clean": "rm -rf .next && rm -f tsconfig.tsbuildinfo",
    "reinstall": "rm -rf node_modules package-lock.json && npm install",
    "deploy:local": "scripts/deploy-local.sh",
    "deploy:local:win": "scripts/deploy-local.bat",
    "deploy:docker": "docker-compose up --build",
    "deploy:docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "build:optimize": "node scripts/build-optimize.js",
    "build:analyze": "node scripts/build-optimize.js --analyze",
    "health": "curl -f http://localhost:3000/api/health || curl -f http://localhost:3000/healthz"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@supabase/supabase-js": "^2.39.0",
    "@tanstack/react-query": "^5.87.1",
    "@tanstack/react-query-devtools": "^5.85.6",
    "@vercel/blob": "^1.1.1",
    "@vercel/kv": "^1.0.1",
    "axios": "^1.6.5",
    "file-saver": "^2.0.5",
    "framer-motion": "^10.17.9",
    "jspdf": "^3.0.2",
    "lucide-react": "^0.303.0",
    "next": "^14.2.32",
    "openai": "^4.24.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^3.1.2",
    "sharp": "^0.33.1",
    "zod": "^3.22.4",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/file-saver": "^2.0.7",
    "@types/node": "^20.10.6",
    "@types/papaparse": "^5.3.14",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "@types/react-lazy-load-image-component": "^1.6.4",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.16",
    "critters": "^0.0.25",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.0.4",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^8.0.3",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.2.0",
    "postcss": "^8.4.33",
    "prettier": "^3.1.1",
    "react-lazy-load-image-component": "^1.6.3",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4",
    "webpack-bundle-analyzer": "^4.10.2"
  },
  "optionalDependencies": {
    "ioredis": "^5.7.0"
  }
}
