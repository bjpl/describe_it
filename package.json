{
  "name": "describe-it",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.11.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "playwright test",
    "test:e2e:staging": "playwright test --config=playwright-staging.config.ts",
    "test:smoke": "playwright test --grep='@smoke'",
    "test:perf": "node scripts/performance-test.js",
    "test:vitals": "node scripts/web-vitals-test.js",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prebuild": "echo 'Skipping prebuild checks for deployment'",
    "analyze": "cross-env ANALYZE=true npm run build",
    "postbuild": "echo 'Build completed successfully'",
    "sentry:sourcemaps": "sentry-cli releases files $npm_package_version upload-sourcemaps .next/static",
    "prepare": "husky install",
    "clean": "rm -rf .next && rm -f tsconfig.tsbuildinfo",
    "reinstall": "rm -rf node_modules package-lock.json && npm install",
    "deploy:local": "scripts/deploy-local.sh",
    "deploy:local:win": "scripts/deploy-local.bat",
    "deploy:docker": "docker-compose up --build",
    "deploy:docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "build:optimize": "node scripts/build-optimize.js",
    "build:analyze": "node scripts/build-optimize.js --analyze",
    "health": "curl -f http://localhost:3000/api/health || curl -f http://localhost:3000/healthz",
    "security:audit": "npm audit --audit-level=moderate",
    "security:audit:fix": "npm audit fix",
    "deps:check": "npm outdated",
    "deps:update": "npm update --save",
    "deps:update:dev": "npm update --save-dev",
    "config:prod": "NODE_ENV=production",
    "test:prod": "vitest --config=config/vitest.config.prod.ts",
    "build:prod": "tsc --project config/tsconfig.prod.json",
    "audit:performance": "node scripts/performance-audit.js",
    "profile:bundle": "npm run build:analyze && open .next/analyze/client.html",
    "monitor:vitals": "node scripts/web-vitals-test.js",
    "validate:env": "node scripts/validate-env.cjs",
    "validate:env:prod": "NODE_ENV=production node scripts/validate-env.cjs",
    "validate:env:dev": "NODE_ENV=development node scripts/validate-env.cjs"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@sentry/cli": "^2.53.0",
    "@sentry/nextjs": "^10.11.0",
    "@supabase/supabase-js": "^2.39.0",
    "@tanstack/react-query": "^5.87.4",
    "@tanstack/react-query-devtools": "^5.85.6",
    "@vercel/blob": "^1.1.1",
    "@vercel/kv": "^1.0.1",
    "axios": "^1.6.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "file-saver": "^2.0.5",
    "framer-motion": "^10.17.9",
    "isomorphic-dompurify": "^2.26.0",
    "jspdf": "^3.0.2",
    "lucide-react": "^0.303.0",
    "next": "^15.1.6",
    "openai": "^4.24.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-is": "^19.1.1",
    "recharts": "^3.1.2",
    "sharp": "^0.33.1",
    "web-vitals": "^5.1.0",
    "zod": "^3.22.4",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/file-saver": "^2.0.7",
    "@types/node": "^20.10.6",
    "@types/papaparse": "^5.3.14",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@types/react-lazy-load-image-component": "^1.6.4",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.16",
    "critters": "^0.0.25",
    "cross-env": "^7.0.3",
    "eslint": "^9.34.0",
    "eslint-config-next": "14.0.4",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^8.0.3",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.2.0",
    "postcss": "^8.4.33",
    "prettier": "^3.1.1",
    "react-lazy-load-image-component": "^1.6.3",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4",
    "webpack-bundle-analyzer": "^4.10.2"
  },
  "optionalDependencies": {
    "ioredis": "^5.7.0"
  }
}
