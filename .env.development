# ==============================================
# DEVELOPMENT DEFAULTS
# ==============================================
# These are safe defaults for local development
# Override these in .env.local with your actual keys
# This file is committed to version control

# ==============================================
# ENVIRONMENT
# ==============================================
NODE_ENV=development

# ==============================================
# APP CONFIGURATION
# ==============================================
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ==============================================
# SECURITY & CORS (DEVELOPMENT)
# ==============================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000,http://127.0.0.1:3001
CSP_ALLOWED_DOMAINS=localhost,127.0.0.1
TRUSTED_PROXY_IPS=127.0.0.1,::1

# ==============================================
# DEBUG & MONITORING (DEVELOPMENT)
# ==============================================
DEBUG_ENDPOINT_ENABLED=true
DEBUG_ALLOWED_IPS=127.0.0.1,192.168.1.100
ERROR_REPORTING_LEVEL=info
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_WEB_VITALS=true

# ==============================================
# RATE LIMITING (PERMISSIVE FOR DEV)
# ==============================================
RATE_LIMIT_WINDOW_MS=15000
RATE_LIMIT_MAX_REQUESTS=100
API_RATE_LIMIT_MAX_REQUESTS=50
IMAGE_SEARCH_RATE_LIMIT=20

# ==============================================
# LOGGING (DEVELOPMENT)
# ==============================================
LOG_LEVEL=info
ENABLE_STRUCTURED_LOGGING=false
LOG_RETENTION_DAYS=7
ENABLE_AUDIT_LOGGING=false

# ==============================================
# CACHING (DEVELOPMENT)
# ==============================================
MAX_CACHE_SIZE=1000
DEFAULT_CACHE_TTL=3600
CACHE_WRITE_THROUGH=true
ENABLE_MEMORY_CACHE_FALLBACK=true
ENABLE_REDIS_CACHE=false
CACHE_TTL=300

# ==============================================
# DATABASE (DEVELOPMENT)
# ==============================================
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_SSL=false
DATABASE_POOL_SIZE=10
DATABASE_TIMEOUT=30000

# ==============================================
# FEATURE FLAGS (DEVELOPMENT)
# ==============================================
ENABLE_DEMO_MODE=false
DEMO_MODE_AUTO=false
ENABLE_IMAGE_SEARCH=true
ENABLE_AI_TRANSLATION=true
ENABLE_SETTINGS_SYNC=true
ENABLE_ERROR_REPORTING=true
ENABLE_PERFORMANCE_METRICS=true
ENABLE_REAL_TIME=true
ENABLE_ANALYTICS=false
ENABLE_EXPORT=true
ENABLE_A_B_TESTING=false
ENABLE_BETA_FEATURES=true
ENABLE_COLLABORATION=true
ENABLE_OFFLINE_MODE=false
ENABLE_PWA=true

# ==============================================
# OPENAI DEFAULTS (DEVELOPMENT)
# ==============================================
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# ==============================================
# MONITORING (DEVELOPMENT)
# ==============================================
SENTRY_ENVIRONMENT=development
HEALTH_CHECK_TIMEOUT=5000
ENABLE_DEEP_HEALTH_CHECKS=false

# ==============================================
# DEPLOYMENT (DEVELOPMENT)
# ==============================================
ANALYZE=false
BUNDLE_ANALYZE=false
NEXT_TELEMETRY_DISABLED=1
NEXTJS_CACHE_SIZE=50
ENABLE_SOURCE_MAPS=true
ENABLE_MINIFICATION=false
ENABLE_TREE_SHAKING=true

# ==============================================
# SSL/TLS (DEVELOPMENT)
# ==============================================
FORCE_HTTPS=false
ENABLE_HSTS=false
HSTS_MAX_AGE=31536000
ENABLE_SECURITY_HEADERS=true

# ==============================================
# BACKUP (DEVELOPMENT)
# ==============================================
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7

# ==============================================
# TESTING (DEVELOPMENT)
# ==============================================
ENABLE_TEST_MODE=false
TEST_API_DELAY=0

# ==============================================
# NOTE
# ==============================================
# These are safe defaults. For actual API keys and secrets,
# create a .env.local file (not committed) and add them there.
# See .env.example for the complete list of variables.
