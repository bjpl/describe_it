# ==============================================
# PRODUCTION ENVIRONMENT VARIABLES
# ==============================================
# Copy this file to .env.production for Docker deployments
# DO NOT commit .env.production to version control

# ==============================================
# CORE APPLICATION
# ==============================================
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://yourdomain.com
PORT=3000

# ==============================================
# REQUIRED API KEYS
# ==============================================

# Anthropic Claude API
ANTHROPIC_API_KEY=sk-ant-your-production-key-here
CLAUDE_MODEL=claude-sonnet-4-5-20250629
CLAUDE_MAX_TOKENS=8192
CLAUDE_TEMPERATURE=0.7

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Unsplash
NEXT_PUBLIC_UNSPLASH_ACCESS_KEY=your-unsplash-key

# ==============================================
# SECURITY KEYS (Generate with crypto.randomBytes)
# ==============================================
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
API_SECRET_KEY=your-32-byte-hex-key
JWT_SECRET=your-32-byte-hex-key
SESSION_SECRET=your-16-byte-hex-key

# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_URL=redis://:your-redis-password@redis:6379
REDIS_PASSWORD=your-strong-redis-password
ENABLE_REDIS_CACHE=true
MAX_CACHE_SIZE=2000
DEFAULT_CACHE_TTL=3600

# ==============================================
# SECURITY
# ==============================================
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
FORCE_HTTPS=true
ENABLE_HSTS=true
ENABLE_SECURITY_HEADERS=true

# ==============================================
# MONITORING
# ==============================================
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=production
SENTRY_ORG=your-org
SENTRY_PROJECT=your-project

ENABLE_PERFORMANCE_MONITORING=true
LOG_LEVEL=warn

# ==============================================
# RATE LIMITING
# ==============================================
RATE_LIMIT_WINDOW_MS=15000
RATE_LIMIT_MAX_REQUESTS=100
API_RATE_LIMIT_MAX_REQUESTS=50

# ==============================================
# GRAFANA (Optional)
# ==============================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=your-strong-grafana-password

# ==============================================
# FEATURE FLAGS
# ==============================================
DEBUG_ENDPOINT_ENABLED=false
ENABLE_DEMO_MODE=false
ENABLE_ANALYTICS=true
ENABLE_ERROR_REPORTING=true

# ==============================================
# VERSION INFO
# ==============================================
VERSION=1.0.0
