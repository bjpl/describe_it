# API Configuration
# Copy this file to .env.local and fill in your actual API keys

# Unsplash API
# Get your access key from: https://unsplash.com/developers
NEXT_PUBLIC_UNSPLASH_ACCESS_KEY=your_unsplash_access_key_here

# OpenAI API
# Get your API key from: https://platform.openai.com/account/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Supabase Configuration
# Get these from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Vercel KV Redis Cache (Optional)
# These are automatically provided by Vercel when you add KV storage
KV_REST_API_URL=your_kv_rest_api_url_here
KV_REST_API_TOKEN=your_kv_rest_api_token_here

# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Rate Limiting Configuration (Optional)
UNSPLASH_RATE_LIMIT_PER_HOUR=1000
OPENAI_RATE_LIMIT_PER_MINUTE=3000

# Cache Configuration (Optional)
DEFAULT_CACHE_TTL=3600
MAX_CACHE_SIZE=1000