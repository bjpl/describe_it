{
  "extends": ["next/core-web-vitals"],
  "rules": {
    "prefer-const": "error",
    "no-var": "error",
    "no-console": [
      "error",
      {
        "allow": []
      }
    ],
    "react/no-unescaped-entities": "warn"
  },
  "overrides": [
    {
      "files": [
        "scripts/**/*.js",
        "scripts/**/*.cjs",
        "scripts/**/*.mjs",
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*.spec.ts",
        "**/*.spec.tsx",
        "tests/**/*.ts",
        "tests/**/*.tsx"
      ],
      "rules": {
        "no-console": "off"
      }
    },
    {
      "files": ["src/**/*.ts", "src/**/*.tsx"],
      "plugins": ["custom-rules"],
      "rules": {
        "custom-rules/require-logger": "error",
        "react/no-unescaped-entities": "warn",
        "react/display-name": "warn"
      }
    }
  ]
}